<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Chi tiết sinh viên
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="string" Disabled Label="Mã sinh viên" ReadOnly="true" />
        <MudTextField T="string" Disabled Label="Tên sinh viên" ReadOnly="true" />
        <MudTextField T="string" Disabled Label="Số điện thoại" ReadOnly="true" />
        <MudTextField T="string" Disabled Label="Email" ReadOnly="true" />
        <MudTextField T="string" Disabled Label="Trạng thái" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Surface" Variant="Variant.Filled" OnClick="Cancel">Quay lại</MudButton>
        @*   <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Tạo</MudButton> *@
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}
