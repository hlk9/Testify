@using Testify.DAL.Models

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Chi tiết phòng
        </MudText>
    </TitleContent>
    <DialogContent>

            <MudTextField T="int" @bind-Value="@room.Id" Label="Mã phòng" ReadOnly="true" />
        <MudTextField T="string" Label="Tên phòng" @bind-Value="@room.Name" ReadOnly="true" />
        <MudTextField T="int" Label="Số lượng" @bind-Value="@room.Capacity" ReadOnly="true" />
        <MudTextField T="string" Label="Địa chỉ" @bind-Value="@room.Address" ReadOnly="true" />
        <MudTextField T="bool?" Label="Trạng thái" @bind-Value="@room.Status" ReadOnly="true" />

        

    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Surface" Variant="Variant.Filled" OnClick="Cancel">Quay lại</MudButton>
      @*   <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Tạo</MudButton> *@
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]

    public int RoomId { get; set; }

    private Room room { get; set; }

    protected override async Task OnInitializedAsync()
    {
        room = await _serRoom.GetRoomId(RoomId);
    }

    private void Cancel() => MudDialog.Cancel();
}
