@using Testify.DAL.Models
<MudDialog>
    <TitleContent>
    <TitleContent>
        <MudText Style="font-size: 18px; font-weight: bold; text-transform: uppercase">Chi tiết tài khoản</MudText>
    </TitleContent>
    </TitleContent>
    <DialogContent>
        <MudForm Spacing="3" Model="@users">
            <MudTextField T="string" @bind-Value="@users.FullName" Label="Họ và tên" ReadOnly=true Variant="Variant.Outlined" />
            <MudTextField T="DateTime" @bind-Value="@users.DateOfBirth" Label="Ngày sinh" ReadOnly=true Variant="Variant.Outlined" />
            <MudTextField T="string" @bind-Value="@users.PhoneNumber" Label="Số điện thoại" ReadOnly=true Variant="Variant.Outlined" />
            <MudTextField T="string" @bind-Value="@users.Address" Label="Địa chỉ" ReadOnly=true Variant="Variant.Outlined" />
            <MudTextField T="int" @bind-Value="@users.LevelId" Label="Level" ReadOnly=true Variant="Variant.Outlined" />
            <MudTextField T="string" @bind-Value="@users.UserName" Label="Tên tài khoản" ReadOnly=true Variant="Variant.Outlined" />
            <MudTextField T="string" @bind-Value="@users.Email" Label="Email" ReadOnly=true Variant="Variant.Outlined" />
            <MudRadioGroup T="bool" @bind-Value="@users.Sex" Label="Giới tính">
                <MudRadio T="bool" Value="true">Nam</MudRadio>
                <MudRadio T="bool" Value="false">Nữ</MudRadio>
            </MudRadioGroup>
        </MudForm>
        

    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Surface" OnClick="Cancel">Quay lại</MudButton>
     
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Guid UserId { get; set; }

    private User users { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        users = await _serLec.GetLecturerById(UserId);
    }


    private void Cancel() => MudDialog.Cancel();
}
