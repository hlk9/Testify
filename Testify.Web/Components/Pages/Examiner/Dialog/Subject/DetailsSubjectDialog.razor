@using Testify.DAL.Models
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Chi tiết môn học
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="int" @bind-Value="@subject.Id" Disabled Label="Mã môn học" ReadOnly="true" />
        <MudTextField T="string" @bind-Value="@subject.Name" Disabled Label="Tên môn học" ReadOnly="true" />
        <MudTextField T="string" @bind-Value="@subject.Description" Disabled Label="Mô tả" ReadOnly="true" />
        <MudTextField T="bool?" @bind-Value="@subject.Status" Disabled Label="Trạng thái" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Surface" Variant="Variant.Filled" OnClick="Cancel">Quay lại</MudButton>
       
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public int IdSubject { get; set; }

    private Subject subject { get; set; }

    protected override async Task OnInitializedAsync()
    {
        subject = await _serSub.GetSubId(IdSubject);
    }


    private void Cancel() => MudDialog.Cancel();
}
