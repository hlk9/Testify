@page "/Register"

<div style="height: 100vh">
    <MudGrid style="padding: 0; margin: 0; width: 100%; background-color: #29A69A; height: 100%; align-items: center">
        <MudItem xl="7" lg="8" sm="12" md="12" xs="12" style="padding: 50px; margin: 0; height: 100%; width: 100%; background-color: #FFFFFF; border-bottom-right-radius: 50px; border-top-right-radius: 50px">
            <MudPaper style="box-shadow: none;">
                <MudGrid style="padding: 0; margin: 0; width: 100%">
                    <MudItem xl="2" lg="2" md="4" sm="4" xs="12" style="width: 100%; padding: 0; margin: 0">
                        <MudPaper>
                            <MudButton style="background-color: transparent; border: 1px solid #29A69A; color: #29A69A; width: 100% !important; padding: 15px">Logo</MudButton>
                        </MudPaper>
                    </MudItem>
                    <MudItem xl="2" lg="2" md="1" sm="1" xs="0" style="padding: 0; margin: 0"></MudItem>
                    <MudItem xl="2" lg="2" md="1" sm="1" xs="0" style="padding: 0; margin: 0"></MudItem>
                    <MudItem xl="2" lg="2" md="1" sm="1" xs="0" style="padding: 0; margin: 0"></MudItem>
                    <MudItem xl="2" lg="2" md="1" sm="1" xs="0" style="padding: 0; margin: 0"></MudItem>
                    <MudItem xl="2" lg="2" md="4" sm="4" xs="0" style="width: 100%; padding: 0; margin: 0">
                        <MudPaper>
                            <MudButton href="/RegisterSelector" style="background-color: transparent; border: 1px solid #29A69A; color: #29A69A; width: 100% !important; padding: 15px">Đăng Nhập</MudButton>
                        </MudPaper>
                    </MudItem>
                </MudGrid>

                <MudGrid style="align-items: center; padding: 0; margin: 0; width: 100%; height: 100%">
                    <MudItem xl="3" lg="3" md="2" sm="1" xs="12" style="padding: 0; margin: 0"></MudItem>
                    <MudItem xl="6" lg="6" md="8" sm="10" xs="12" style="padding: 0; margin: 0">
                        <div style="height: 100%; width: 100%">
                            <MudItem xs="12" style="text-align: center;">
                                <MudText Typo="Typo.h5" style="font-weight: bold;">Đăng ký tài khoản Testify của bạn</MudText>
                            </MudItem>
                            <MudText style="font-weight: bold; margin-top: 15px">Thông tin cá nhân</MudText>
                            <MudItem xs="12" style="width: 100%;">
                                <MudTextField T="string" Placeholder="Họ Tên" Variant="Variant.Outlined" style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                            </MudItem>
                            <div class="d-flex justify-space-between">
                                <MudItem xs="12" sm="6" style="width: 48%;">
                                    <MudTextField T="string" Placeholder="Lớp" Variant="Variant.Outlined"
                                                  style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                                </MudItem>
                                <MudItem xs="12" sm="6" style="width: 48%; margin-left: 10px;">
                                    <MudTextField T="string" Placeholder="Ngày sinh" Variant="Variant.Outlined"
                                                  style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                                </MudItem>
                            </div>
                            <div class="d-flex justify-space-between">
                                <MudItem xs="12" sm="4" style="width: 32%;">
                                    <MudTextField T="string" Placeholder="Tỉnh/ Thành Phố" Variant="Variant.Outlined"
                                                  style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                                </MudItem>
                                <MudItem xs="12" sm="4" style="width: 32%; margin-left: 5px;">
                                    <MudTextField T="string" Placeholder="Quận/ Huyện" Variant="Variant.Outlined"
                                                  style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                                </MudItem>
                                <MudItem xs="12" sm="4" style="width: 32%; margin-left: 5px;">
                                    <MudTextField T="string" Placeholder="Phường/ Xã" Variant="Variant.Outlined"
                                                  style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                                </MudItem>
                            </div>
                            <MudText style="font-weight: bold; margin-top: 15px">Thông tin tài khoản</MudText>
                            <MudItem xs="12" style="width: 100%;">
                                <MudTextField T="string" Placeholder="Số điện thoại" Variant="Variant.Outlined"
                                              style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                            </MudItem>
                            <MudItem xs="12" style="width: 100%;">
                                <MudTextField T="string" Placeholder="Email" Variant="Variant.Outlined"
                                              style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                            </MudItem>
                            <MudItem xs="12" style="width: 100%;">
                                <MudTextField T="string" Placeholder="Mật khẩu" Variant="Variant.Outlined"
                                              style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                            </MudItem>
                            <MudItem xs="12" style="width: 100%;">
                                <MudTextField T="string" Placeholder="Xác nhận mật khẩu" Variant="Variant.Outlined"
                                              style="height: 50px; border-radius: 10px; padding-left: 10px;" />
                            </MudItem>
                            <MudItem xs="12" style="text-align: center; margin-top: 10px;">
                                <MudButton Variant="Variant.Filled" Color="Color.Primary" style="height: 50px; width: 100%;">Đăng ký</MudButton>
                            </MudItem>
                            <div class="d-flex align-items-center justify-content-center" style="margin: 20px 0;">
                                <MudDivider style="width: 45%; border-width: 2px; background-color: black;" Color="Color.Dark" />
                                <MudText Class="mx-2" style="padding: 0 10px; color: black;">Hoặc</MudText>
                                <MudDivider style="width: 45%; border-width: 2px; background-color: black;" Color="Color.Dark" />
                            </div>
                            <div class="d-flex justify-space-between">
                                <MudItem xs="12" sm="6" style="width: 48%;">
                                    <MudButton Variant="Variant.Outlined" style="height: 50px; border-radius: 5px; padding-left: 15px; width: 100%;">
                                        <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" viewBox="0 0 40 40" width="25" height="25">
                                        <linearGradient id="a" x1="-277.375" x2="-277.375" y1="406.6018" y2="407.5726" gradientTransform="matrix(40 0 0 -39.7778 11115.001 16212.334)" gradientUnits="userSpaceOnUse">
                                        <stop offset="0" stop-color="#0062e0" />
                                        <stop offset="1" stop-color="#19afff" />
                                            </linearGradient>
                                        <path fill="url(#a)" d="M16.7 39.8C7.2 38.1 0 29.9 0 20 0 9 9 0 20 0s20 9 20 20c0 9.9-7.2 18.1-16.7 19.8l-1.1-.9h-4.5l-1 1z" />
