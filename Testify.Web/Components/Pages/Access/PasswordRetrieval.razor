@page "/"

<MudGrid Class="ma-0 pa-0 d-flex justify-center" Style="background-color:#29A69A; height: 100vh; width: 100%; align-items:center;">
    <MudItem sm="12" md="12" xs="7" lg="7" Class="d-flex justify-center rounded-br-xl rounded-tr-xl" Style="background-color: #FFFFFF; height: 100%; align-items: center; position: relative;">
        <MudPaper Elevation="0" Class="p-5 d-flex flex-column align-items-center justify-content-center" Style="position: relative; width: 100%; height: 100%; border-bottom-right-radius: 50%;">
            <MudButton Variant="Variant.Outlined" Class="back-button" Style="position: absolute; top: 20px; left: 20px; background-color: #FFFFFF; color: #29A69A; border-color: #29A69A; width: 160px; height: 60px; font-weight: bold;">
                Logo
            </MudButton>

            <MudButton Variant="Variant.Outlined" Class="login-button" Style="position: absolute; top: 20px; right: 20px; background-color: #FFFFFF; color: #29A69A; border-color: #29A69A; width: 160px; height: 60px; font-weight: bold;">
                Đăng Nhập
            </MudButton>

            <div class="form-container" Style="width: 444px;">
                <MudText Typo="Typo.h5" Class="mb-2" Style="font-size: 1.2rem;">Quên mật khẩu tài khoản Testify của bạn?</MudText>

                <MudTextField T="string" Placeholder="Nhập email / Số điện thoại" Variant="Variant.Outlined" Class="mb-3" Style="width: 444px; height: 50px;"></MudTextField>

                <MudButton Variant="Variant.Filled" Class="confirm-button" Style="background-color: #29A69A; color: #FFFFFF; width: 444px; height: 50px;">Tiếp tục</MudButton>
            </div>
        </MudPaper>
    </MudItem>

    <MudItem sm="12" md="12" xs="5" lg="5" Class="d-flex justify-center align-items-center" Style="">
        <MudPaper Elevation="0" Class="p-5 w-75 d-flex align-items-center justify-content-center" Style="background-color: transparent;">
            <MudImage Style="width: 496px; height: 555px;" Src="Asset/image/ResetPassword/ResetPasswprd.png" />
        </MudPaper>
    </MudItem>
</MudGrid>


