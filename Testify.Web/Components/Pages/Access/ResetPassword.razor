@page "/"

<MudGrid Class="ma-0 pa-0 d-flex justify-center " Style="background-color:#29A69A; height: 100vh; width: 100%; align-items:center;">
    <MudItem></MudItem>
    <MudItem sm="12" md="12" xs="7" lg="7" Class="d-flex justify-center rounded-br-xl rounded-tr-xl" Style="background-color: #FFFFFF; height: 100%; align-items: center;">
        <MudPaper Elevation="0" Class="p-5 d-flex flex-column align-items-center justify-content-center" Style="">
            <div class="form-container" Style="width: 444px;">
                <MudText Typo="Typo.h4" Class="text-center mb-4">Nhập mật khẩu mới</MudText>
                <MudTextField T="string" Placeholder="Mật khẩu mới" Variant="Variant.Outlined" Class="mb-3" Style="width: 444px; height: 50px;"></MudTextField>
                <MudTextField T="string" Placeholder="Nhập lại mật khẩu" Variant="Variant.Outlined" Class="mb-3" Style="width: 444px; height: 50px;"></MudTextField>
                <MudButton Variant="Variant.Filled" Class="confirm-button" Style="background-color: #29A69A; color: #FFFFFF; width: 444px; height: 50px;">Xác nhận</MudButton>
            </div>
        </MudPaper>
    </MudItem>
    <MudItem sm="12" md="12" xs="5" lg="5" Class="d-flex justify-center align-items-center" Style="">
        <MudPaper Elevation="0" Class="p-5 w-75 d-flex align-items-center justify-content-center" Style="background-color: transparent;">
            <MudImage Style="width: 496px; height: 555px;" Src="Asset/image/ResetPassword/ResetPassword.png" />
        </MudPaper>
    </MudItem>
</MudGrid>

