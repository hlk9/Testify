@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
<style>
    .main-layout {
        display: flex;
    }

    .main-examiner-nav {
        min-height: 100vh;
        min-width: 300px;
        box-shadow: 3px 1px #d9d9d9;
        padding: 20px 0;
    }

    .main-examiner-nav-logo {
        width: 100%;
        text-decoration: none;
        text-align: center;
    }

    .main-examiner-nav-content {
        margin-top: 20px;
    }

    .main-examiner-content {
        width: 100%;
        background-color: #fafafa;
        padding: 20px 30px;
    }

    .main-examiner-account-child {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .main-examiner-account-child-img {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .main-examiner-account-child-img-child {
        border-radius: 100%;
        width: 13%
    }

    .main-examiner-account-child-notification {
        border-radius: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #29a69a;
        padding: 0 5px
    }

    .highLight {
        background-color: #29a69a;
        color: #fff;
    }
</style>
